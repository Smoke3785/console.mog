{
  "name": "console.mog",
  "version": "0.0.4",
  "description": "Logging, pretty ðŸ˜„",
  "repository": {
    "type": "git",
    "url": "https://github.com/iliadwebdev/iliad-standard-issue"
  },
  "license": "ISC",
  "author": "Smoke3785",
  "type": "module",
  "main": "./cjs/index.cjs",
  "module": "./esm/index.mjs",
  "types": "./esm/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./esm/index.d.ts",
        "default": "./esm/index.mjs"
      },
      "require": {
        "types": "./cjs/index.d.ts",
        "default": "./cjs/index.cjs"
      }
    },
    "./server": {
      "import": {
        "types": "./esm/server.d.ts",
        "default": "./esm/server.mjs"
      },
      "require": {
        "types": "./cjs/server.d.ts",
        "default": "./cjs/server.cjs"
      }
    },
    "./client": {
      "import": {
        "types": "./esm/client.d.ts",
        "default": "./esm/client.mjs"
      },
      "require": {
        "types": "./cjs/client.d.ts",
        "default": "./cjs/client.cjs"
      }
    }
  },
  "files": [
    "ejs",
    "esm"
  ],
  "scripts": {
    "build:cjs": "env NODE_ENV=production tsup && tsup",
    "build:esm": "tsup",
    "build": "tsup && env NODE_ENV=production tsup && tsup",
    "disabled-postinstall": "./src/scripts/install-tmux.sh",
    "dev": "env NODE_ENV=production tsup && tsup --watch",
    "ts:dev": "tsx --watch test",
    "lint": "tsc",
    "test": "rollup -c && node test/index.ts",
    "test-": "node test/index.ts"
  },
  "dependencies": {
    "memoize": "github:Smoke3785/memoize#installable",
    "@iliad.dev/primitive-extensions": "*",
    "@iliad.dev/ts-utils": "*",
    "@preact/signals-core": "^1.8.0",
    "chalk": "^5.3.0",
    "deepmerge": "^4.3.1",
    "patch-console": "^2.0.0",
    "remeda": "^2.17.4",
    "rimraf": "^6.0.1",
    "uid": "^2.0.2",
    "wrap-ansi": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/qs": "^6.9.15",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "nodemon": "^3.1.0",
    "rollup": "^4.17.2",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "tiny-glob": "^0.2.9",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.2"
  }
}
